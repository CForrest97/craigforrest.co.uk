    "jest-environment-jsdom": "^29.2.1",
    "lint-staged": ">=10",
    "postcss": "^8.3.5",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "serverless": "^2.54.0",
    "tailwindcss": "^2.2.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
